.phome {
  height: 76rpx;
  background: #F4F4F4;
  border-radius: 39rpx;
  margin: 55rpx 35rpx 20rpx 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.phome image {
  width: 66rpx;
  height: 66rpx;
}

.phome input {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5D5D61;
  margin-left: 31rpx;
  width: 80%;
}

.code {
  margin: 20rpx 40rpx 0rpx 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.code-input {
  width: 445rpx;
  height: 76rpx;
  background: #F4F4F4;
  border-radius: 39rpx;
  display: flex;
  align-items: center;
  padding-left: 31rpx;
}

.code-input input {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5D5D61;
  width: 100%;
}

.code-botom {
  width: 178rpx;
  height: 76rpx;
  background: #30AEFF;
  border-radius: 39rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.botm {
  width: 680rpx;
  height: 76rpx;
  background: #30AEFF;
  border-radius: 39rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 20rpx;
  margin: 0rpx 35rpx;
}